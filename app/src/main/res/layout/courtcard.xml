<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/courtid"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/courtRelative"
     android:layout_margin="4dp"
     >

     <TextView
         android:id="@+id/courtname"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="RagivGandhi International Stadium"
         android:layout_centerInParent="true"
         android:textSize="20dp"
         android:textStyle="bold"
         android:textColor="#ffffff"
         />
     <TextView
         android:id="@+id/courtaddress"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Uppal, Hyderabad, Telangana 500039"
         android:layout_below="@+id/courtname"

         android:layout_centerHorizontal="true"
         android:textSize="20dp"
         android:layout_marginTop="7dp"
         android:textColor="#ffffff"
         />



 </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>